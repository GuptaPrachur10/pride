<br>
<%= form_for(@ride) do |f| %>
  <div class="field">
  	<%= f.label :from %>
    <%= f.text_field :from, class: 'form-control', placeholder: "Enter a Location..." %>

    <%= f.label :to %>
    <%= f.text_field :to, class: 'form-control', placeholder: "Enter a Location..." %>

    <%= f.label :date %>
    	<div class='form-group input-group date' id='datetimepicker'>
    	<%= f.text_field :date, class: 'form-control', placeholder: "Enter Date & Time" %>
    		<span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
    	</div>

    <%= f.label :price %>
    <%= f.number_field :price, class: 'form-control', placeholder: "Rate per KM (in Rs)", step: 0.5, min: 0.5, max: 100%><br>

  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>